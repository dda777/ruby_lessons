<% provide(:title, t('users.update.title')) %>
<h1><%= t('users.update.title') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit t('users.update.save'), class: 'btn btn-primary' %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t('users.update.change') %></a>
    </div>
  </div>
</div>
