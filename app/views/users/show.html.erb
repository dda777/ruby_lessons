<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
    </section>
  </aside>
</div>
<%  if current_user?(@user) %>
<div class="row">
  <aside class="col-md-4">
    <section class="services">
      <h1><%= t('users.show.service.title') %></h1>
      <ul class="list-group">
        <%= render @services %>
      </ul>
    </section>
  </aside>
</div>
<% end %>