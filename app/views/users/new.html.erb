<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: @user, scope: :user, local: true, class: 'login-form') do |f| %>
      <%= render 'form', f:f %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>

    <div class="oauth">
      <%= link_to "Sign up with Facebook", '/auth/facebook/', class: 'btn btn-primary', role: "button"%>
      <%= link_to "Sign up with Google", '/auth/google_oauth2/', class: 'btn btn-danger', role: "button"%>
    </div>
  </div>
</div>