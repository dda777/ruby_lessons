<% provide(:title, t('users.reset_pass.forgot_password_title')) %>
<h1><%= t('users.reset_pass.forgot_password_title') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true, class: 'forgot_pass_table') do |f| %>
      <%= f.label :email, t('users.reset_pass.email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit t('users.reset_pass.send_on_email_btn'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>