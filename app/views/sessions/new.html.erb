<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true, class: 'login-form') do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me%>
        <span class="form-check-label">Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <div class="oauth">
      <%= link_to "Log in with Facebook", '/auth/facebook/', class: 'btn btn-primary', role: "button" %>
      <%= link_to "Log in with Google", '/auth/google_oauth2/', class: 'btn btn-danger', role: "button"%>
    </div>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>