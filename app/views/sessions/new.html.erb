<% provide(:title, t('users.login.log_in')) %>
<h1><%= t('users.login.log_in') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true, class: 'login-form') do |f| %>
      <%= f.label :email, t('users.login.email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t('users.login.password') %>
      <%= link_to t('users.login.forgot_password'), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me%>
        <span class="form-check-label"><%= t('users.login.remember_me') %></span>
      <% end %>

      <%= f.submit t('users.login.log_in'), class: "btn btn-primary" %>
    <% end %>

    <div class="oauth">
      <%= link_to t('users.login.log_in_facebook'), '/auth/facebook/', class: 'btn btn-primary', role: "button" %>
      <%= link_to t('users.login.log_in_goole'), '/auth/google_oauth2/', class: 'btn btn-danger', role: "button"%>
    </div>
    <p><%= t('users.login.new_user') %> <%= link_to t('users.login.sign_up_now'), signup_path %></p>
  </div>
</div>