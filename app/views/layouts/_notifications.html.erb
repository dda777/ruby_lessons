<div class='container'>

  <div id='notifications' class='span3'>
    <%- if flash[:notice].present? %>
      <div class='alert alert-info'>
        <button type="button" class="close" data-dismiss="alert"> <%= t 'common.x' %> </button>
        <h4> <%= t 'common.heads_up!' %> </h4>

        <%= flash[:notice] %>
      </div>
    <% end %>

    <%- if flash[:alert].present? %>
      <div class='alert alert-error'>
        <button type="button" class="close" data-dismiss="alert"> <%= t 'common.x' %> </button>
        <h4> <%= t 'common.warning!' %> </h4>

        <%= flash[:alert] %>
      </div>
    <% end %>


    <div id='alert-template' class='hidden alert notification'>
    </div>
  </div>


</div>
